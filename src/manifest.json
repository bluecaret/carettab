{
  "manifest_version": 2,
 
  "name": "__MSG_appName__",
  "short_name": "CaretTab",
  "description": "__MSG_appDesc__",
  "version": "2.2.2",
  "version_name": "2.2.2",
  "default_locale": "en",

  "icons": { "16": "assets/img/icon16.png",
             "48": "assets/img/icon48.png",
            "128": "assets/img/icon128.png" },

  "chrome_url_overrides" : {
    "newtab": "carettab.htm"
  },
  
  "background": {
    "scripts": ["js/update.js"],
    "persistent": false
  },

  "offline_enabled": true,

  "permissions": [
    "storage"
  ]
  
}